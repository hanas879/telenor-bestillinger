<div class="card">
  <h5 class="card-header">Endre Bruker</h5>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"Email" %>
  </div>
<br/>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field form-group">
    <% f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Nytt passord (Minimum 6 tegn)" %>
    <% if @minimum_password_length %>
    <% end %>
  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Gjenta passord" %>
  </div>

  <div class="field form-group">
    <% f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control mb-3", placeholder:"Nåværende passord" %>
  </div>

  <div class="actions">
    <%= f.submit "Oppdater", class:"btn btn-success" %>
  </div>
<% end %>
  </div>
</div>

<br/>
<br/>
<div class="card">
  <h5 class="card-header">Fjern min konto</h5>
  <div class="card-body">
    <h5 class="card-title">Ønsker du å slette denne kontoen?</h5>
    <%= button_to "Fjern konto", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>
  </div>
</div>
<br/>
<br/>
