<br/>
<div class="card">
  <h5 class="card-header">Registrer ny bruker</h5>
  <div class="card-body">
    <br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"Email" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Passord (Minimum 6 tegn)" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control md-3", placeholder:"Gjenta passord" %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "Registrer", class:"btn btn-success" %>
  </div>
<% end %>
  </div>
</div>
<br/>
<%= render "devise/shared/links" %>