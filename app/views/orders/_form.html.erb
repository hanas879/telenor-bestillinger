    <%= form.text_field :last_name, class:"form-control", placeholder:"Etternavn" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :phone, class:"form-control", placeholder:"Telefon" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :product, class:"form-control", placeholder:"Produkt" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :note, class:"form-control", placeholder:"Notat" %>
  </div>

  <br/>

  <% @form = form %>
<% end %>
